<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="UselessLeaf" />
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="135dp"
                    android:layout_height="135dp"
                    android:background="@drawable/circle_back"
                    android:forceHasOverlappingRendering="true"
                    android:gravity="center"
                    android:visibility="visible"
                    android:weightSum="1"
                    app:layout_constraintBottom_toBottomOf="@+id/linearLayout3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
                    tools:ignore="UnusedAttribute">
                <ImageView
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:layout_margin="5dp"
                        app:srcCompat="@drawable/logo_home_mysanpablo" />
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
        <TextView
                android:paddingStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BPLO - Register Step 1"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textSize="35sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                tools:ignore="HardcodedText,RtlSymmetry" />


        <android.support.v7.widget.CardView
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:background="@drawable/text_border"
                android:gravity="center"
                android:elevation="6dp"
                android:orientation="vertical">

            <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Data Privacy Policy"
                        android:textColor="@color/white"
                        android:paddingTop="5dp"
                        android:background="@color/colorPrimary"
                        android:layout_marginBottom="10dp"
                        android:paddingBottom="5dp"
                        android:textSize="25sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                <me.biubiubiu.justifytext.library.JustifyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="@string/data_privacy_policy"
                        android:layout_marginStart="30dp"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:background="@drawable/text_border"
                android:gravity="center"
                android:elevation="6dp"
                android:orientation="vertical">

            <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/instruction"
                        android:paddingStart="10dp"
                        android:textColor="@color/white"
                        android:paddingTop="5dp"
                        android:background="@color/colorPrimary"
                        android:paddingBottom="5dp"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        tools:ignore="RtlSymmetry" />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/_1_provide_accurate_information_incomplete_form_will_not_be_proceed_in_the_next_step"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_margin="10dp"
                        android:textSize="20sp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/_2_if_the_context_is_unclickable_please_proceed_to_the_next_context_it_will_be_automatic_system_generated"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_margin="10dp"
                        android:textSize="20sp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:background="@drawable/text_border"
                android:gravity="center"
                android:elevation="6dp"
                android:orientation="vertical">
            <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <LinearLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        tools:ignore="UselessParent">

                    <LinearLayout android:layout_width="300dp"
                            android:layout_height="80dp"
                            android:orientation="vertical"
                            android:padding="5dp">

                        <TextView android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/darkgray"
                                android:textStyle="bold"
                                android:textSize="22sp"
                                android:text="@string/businesss_id"/>

                        <EditText android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:contextClickable="false"
                                android:textSize="22sp"
                                android:inputType="number"
                                android:hint="@string/_1223"
                                android:focusable="false"
                                android:clickable="false"
                                android:textColor="@color/darkgray"
                                android:textColorHint="@color/darkgray"
                                android:id="@+id/txt_bplo_business_id" tools:targetApi="m"
                                tools:ignore="Autofill" />

                    </LinearLayout>
                    <LinearLayout android:layout_width="300dp"
                            android:layout_height="80dp"
                            android:orientation="vertical"
                            android:padding="5dp">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/mode_of_payment"
                                android:textColor="@color/darkgray"
                                android:textSize="22sp"
                                android:textStyle="bold" />


                        <EditText android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/darkgray"
                                android:textSize="22sp"
                                android:text="@string/annually"
                                android:focusable="false"
                                android:clickable="false"
                                android:contextClickable="false"
                                android:id="@+id/rb_mode_of_payment_annually"
                                tools:ignore="Autofill,LabelFor,TextFields,UnusedAttribute" />


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:background="@drawable/text_border"
                android:gravity="center"
                android:elevation="6dp"
                android:orientation="vertical">
            <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                <LinearLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center">

                    <LinearLayout android:layout_width="300dp"
                            android:padding="8dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <TextView android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/darkgray"
                                android:textStyle="bold"
                                android:textSize="22sp"
                                android:text="@string/date_application"/>


                        <EditText android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:contextClickable="false"
                                android:textSize="22sp"
                                android:inputType="date"
                                android:hint="@string/yy_dd_mm"
                                android:focusable="false"
                                android:textColor="@color/darkgray"
                                android:textColorHint="@color/lightgray"
                                android:clickable="false"
                                android:id="@+id/txt_bplo_date_application"
                                tools:ignore="Autofill,UnusedAttribute" />
                        <EditText android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:contextClickable="false"
                                android:textSize="22sp"
                                android:inputType="number"
                                android:hint="@string/reference_no"
                                android:focusable="false"
                                android:textColor="@color/darkgray"
                                android:textColorHint="@color/lightgray"
                                android:clickable="false"
                                android:id="@+id/txt_bplo_ref_number"
                                tools:ignore="Autofill,UnusedAttribute" />

                        <Spinner android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:spinnerMode="dropdown"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:id="@+id/spinner_bplo_association"/>
                        <TextView android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/darkgray"
                                android:textStyle="bold"
                                android:textSize="22sp"
                                android:text=""/>

                    </LinearLayout>


                    <LinearLayout android:layout_width="300dp"
                            android:padding="8dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >

                        <!--<TextView android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:textColor="@color/white"-->
                        <!--android:textStyle="bold"-->
                        <!--android:textSize="18sp"-->
                        <!--android:text=""/>-->
                        <EditText android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="22sp"
                                android:inputType="number"
                                android:hint="DTI/SEC/CDA Registration No."
                                android:textColor="@color/darkgray"
                                android:textColorHint="@color/lightgray"
                                android:id="@+id/txt_bplo_dti_registration_num"
                                tools:ignore="Autofill,HardcodedText" />
                        <TextView android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/darkgray"
                                android:textStyle="bold"
                                android:textSize="22sp"
                                android:text="DTI/SEC/CDA Date of Registration:"
                                tools:ignore="HardcodedText" />
                        <EditText android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:textSize="22sp"
                                android:inputType="date"
                                android:hint="@string/yy_dd_mm"
                                android:textColor="@color/darkgray"
                                android:textColorHint="@color/lightgray"

                                android:id="@+id/txt_bplo_date_dti_registration"
                                tools:ignore="Autofill" />
                        <EditText android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="22sp"
                                android:inputType="number"
                                android:hint="@string/tin_no"
                                android:textColor="@color/darkgray"
                                android:textColorHint="@color/lightgray"
                                android:id="@+id/txt_bplo_tin_num"
                                tools:ignore="Autofill" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp">
                    <TextView android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="22sp"
                            android:textColor="@color/darkgray"
                            android:text="@string/are_you_enjoying_tax_incentive_from_any_government" />


                    <RadioGroup android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/rg_bplo_government_entity">

                        <RadioButton android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/yes"
                                android:textSize="22sp"
                                android:textColor="@color/darkgray"
                                android:id="@+id/rb_bplo_government_yes"/>
                        <RadioButton android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/no"
                                android:textSize="22sp"
                                android:textColor="@color/darkgray"
                                android:id="@+id/rb_bplo_government_no"/>

                    </RadioGroup>
                    <EditText android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/please_sepicify_entity"
                            android:textColor="@color/darkgray"
                            android:textColorHint="@color/lightgray"
                            android:textSize="22sp"
                            android:maxLength="200"
                            android:id="@+id/txt_bplo_government_entity"
                            tools:ignore="Autofill,TextFields" />

                    <TextView android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="22sp"
                            android:textColor="@color/darkgray"
                            android:text="@string/is_the_establishment_cctv_equipped"/>
                    <RadioGroup android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/rg_bplo_cctv">

                        <RadioButton android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/yes"
                                android:textSize="22sp"
                                android:textColor="@color/darkgray"
                                android:id="@+id/rb_bplo_cctv_yes"/>
                        <RadioButton android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/no"
                                android:textSize="22sp"
                                android:textColor="@color/darkgray"
                                android:id="@+id/rb_cctv_no"/>
                    </RadioGroup>

                    <EditText android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/number_of_cameras"
                            android:textColor="@color/darkgray"
                            android:textColorHint="@color/lightgray"
                            android:textSize="22sp"
                            android:maxLength="200"
                            android:inputType="number"
                            android:id="@+id/txt_bplo_cctv_number_of_cameras"
                            tools:ignore="Autofill" />
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:background="@drawable/text_border"
                android:gravity="center"
                android:elevation="6dp"
                android:orientation="vertical">
            <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:background="@color/colorPrimary"
                        android:paddingTop="5dp"
                        android:paddingStart="10dp"
                        android:paddingBottom="5dp"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:text="@string/name_of_taxpayer_registrant"
                        tools:ignore="RtlSymmetry" />

                <LinearLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp">

                    <EditText android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/last_name"
                            android:textColor="@color/darkgray"
                            android:textColorHint="@color/lightgray"
                            android:textSize="22sp"
                            android:inputType="textPersonName"
                            android:id="@+id/txt_bplo_name_of_taxpayer_lname"
                            tools:ignore="Autofill" />

                    <EditText android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/first_name"
                            android:textColor="@color/darkgray"
                            android:textColorHint="@color/lightgray"
                            android:textSize="22sp"
                            android:inputType="textPersonName"
                            android:id="@+id/txt_bplo_name_of_taxpayer_fname"
                            tools:ignore="Autofill" />

                    <EditText android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/middle_name"
                            android:textColor="@color/darkgray"
                            android:textColorHint="@color/lightgray"
                            android:textSize="22sp"
                            android:inputType="textPersonName"
                            android:id="@+id/txt_bplo_name_of_taxpayer_mname"
                            tools:ignore="Autofill" />

                    <EditText android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/business_name"
                            android:textColor="@color/darkgray"
                            android:textColorHint="@color/lightgray"
                            android:textSize="18sp"
                            android:inputType="textPersonName"
                            android:id="@+id/txt_bplo_name_of_taxpayer_business_name"
                            tools:ignore="Autofill" />

                    <EditText android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/trade_name_franchise"
                            android:textColor="@color/darkgray"
                            android:textColorHint="@color/lightgray"
                            android:textSize="22sp"
                            android:inputType="textPersonName"
                            android:id="@+id/txt_bplo_name_of_taxpayer_trade_name"
                            tools:ignore="Autofill" />

                    <EditText android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/name_of_president_treasurer_corporation"
                            android:textColor="@color/darkgray"
                            android:textColorHint="@color/lightgray"
                            android:textSize="22sp"
                            android:inputType="textPersonName"
                            android:id="@+id/txt_bplo_name_of_taxpayer_name_of_president"
                            tools:ignore="Autofill" />


                    <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="22sp"
                            android:textColor="@color/darkgray"
                            android:text="@string/owners_gender" />

                    <RadioGroup android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/rg_bplo_name_of_taxpayer_owners_gender">

                        <RadioButton android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/male"
                                android:textSize="22sp"
                                android:textColor="@color/darkgray"
                                android:id="@+id/rb_bplo_name_of_tax_payer_male"/>
                        <RadioButton android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/female"
                                android:textSize="22sp"
                                android:textColor="@color/darkgray"
                                android:id="@+id/rb_bplo_name_of_tax_payer_female"/>
                        <RadioButton android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/jp"
                                android:textSize="22sp"
                                android:textColor="@color/darkgray"
                                android:id="@+id/rb_bplo_name_of_tax_payer_jp"/>
                    </RadioGroup>

                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:gravity="center">



            <Button android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:padding="8dp"
                    android:background="@drawable/text_border2"
                    android:text="@string/clear_all"
                    android:layout_gravity="start"
                    android:id="@+id/txt_bplo_clear_all"
                    tools:ignore="ButtonStyle" />

            <Button android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textSize="22sp"

                    android:text="@string/next_page"
                    android:background="@drawable/text_border2"
                    android:layout_gravity="right"
                    android:id="@+id/txt_bplo_next_page"
                    tools:ignore="ButtonStyle,RtlHardcoded" />

        </LinearLayout>




        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/phlogo"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp"
                    tools:ignore="ContentDescription" />
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="center"
                        android:text="@string/republic_of_the_philippines"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Rep"
                        android:textSize="15sp"
                        android:textColor="@color/colorPrimary"
                        android:textAlignment="center"
                        android:layout_marginBottom="5dp"/>
                <TextView
                        android:text="@string/_2019_san_pablo_city_goverment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="15sp"
                        android:padding="5dp"
                        android:textColor="@color/colorPrimary"
                        android:textAlignment="center"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:id="@+id/textView8"

                        />

            </LinearLayout>

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/transpa"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp"
                    tools:ignore="ContentDescription" />

        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

            <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="3dp"
                        android:gravity="center"
                        android:text="@string/developed_by"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp" />
                <ImageView
                        android:layout_width="110dp"
                        android:layout_height="45dp"
                        app:srcCompat="@drawable/pylon"
                        android:layout_marginEnd="13dp"
                        tools:ignore="ContentDescription,TooManyViews" />
